C√≥digo da HUD do jogo:
using UnityEngine;
using TMPro;
using UnityEngine.UI;

public class HUDManager : MonoBehaviour
{
    public TextMeshProUGUI pollutionText;       // Exibe o valor do meio ambiente (plantinha)
    public TextMeshProUGUI revenueText;         // Exibe o valor do dinheiro (cifr√£o)
    public TextMeshProUGUI popularityEmoji;     // Exibe a popularidade em forma de emoji
    public TextMeshProUGUI populationText;      // Exibe o valor da popula√ß√£o
    public TextMeshProUGUI environmentText;     // Exibe a % do meio ambiente

    public GameObject missionPanel;             // Painel que mostra as miss√µes
    public TextMeshProUGUI missionText;         // Texto da miss√£o
    public Button missionButton;                // Bot√£o que abre o painel de miss√£o (√≠cone de alvo)

    private float pollution = 0f;               // Valor de polui√ß√£o atual (0 a 100, quanto maior, pior)
    private float environment = 100f;           // Valor de meio ambiente, calculado com base na polui√ß√£o
    private float revenue = 0f;                 // Receita (dinheiro)
    private float popularity = 0f;              // Popularidade (influenciada pela polui√ß√£o)
    private float population = 0f;              // Popula√ß√£o atual

    // Emojis usados para representar os n√≠veis de popularidade
    private const string EMOJI_HAPPY = "\U0001F642";    // üôÇ Feliz
    private const string EMOJI_NEUTRAL = "\U0001F610";  // üòê Neutro
    private const string EMOJI_ANGRY = "\U0001F620";    // üò† Irritado
    private const string EMOJI_RAGING = "\U0001F621";   // üò° Furioso

    // Dados da miss√£o de plantar √°rvores
    private int treesPlanted = 0;               // N√∫mero de √°rvores plantadas
    private int missionGoal = 10;               // Objetivo da miss√£o: plantar 10 √°rvores

    void Start()
    {
        // Inicializa√ß√£o com valores de teste
        AddPollution(12f);                      // Define uma polui√ß√£o inicial
        AddRevenue(2400000f);                   // Define um valor de receita inicial
        AddPopularity(50f);                     // Define uma popularidade inicial

        // Atualiza o texto da miss√£o
        missionText.text = $"\uD83C\uDF33 Plante {missionGoal} √°rvores\nProgresso: {treesPlanted}/{missionGoal}";
        missionPanel.SetActive(false);          // Esconde o painel de miss√£o no in√≠cio

        // Adiciona evento de clique no bot√£o de miss√£o
        missionButton.onClick.AddListener(ToggleMissionPanel);
    }

    void Update()
    {
        // Atualiza os elementos visuais da HUD a cada frame
        pollutionText.text = GetEnvironmentPercentage();   // Atualiza o meio ambiente
        environmentText.text = GetEnvironmentPercentage(); // Mostra a % do meio ambiente
        revenueText.text = FormatRevenue(revenue);         // Atualiza a receita
        populationText.text = FormatPopulation(population); // Atualiza a popula√ß√£o
        UpdatePopularityEmoji();                           // Atualiza o emoji da popularidade

        // Reduz a popularidade com base na polui√ß√£o atual (efeito passivo)
        float pollutionImpact = pollution * 0.01f; // exemplo: 50 polui√ß√£o = -0.5 por frame
        popularity = Mathf.Clamp(popularity - pollutionImpact * Time.deltaTime, 0f, 100f);
    }

    // Converte a polui√ß√£o em um valor de meio ambiente (quanto menor a polui√ß√£o, melhor o ambiente)
    private string GetEnvironmentPercentage()
    {
        environment = Mathf.Clamp(100f - pollution, 0f, 100f);
        return environment.ToString("F1") + "%";
    }

    // Atualiza o emoji baseado na popularidade
    private void UpdatePopularityEmoji()
    {
        if (popularity >= 75)
            popularityEmoji.text = EMOJI_HAPPY;
        else if (popularity >= 50)
            popularityEmoji.text = EMOJI_NEUTRAL;
        else if (popularity >= 25)
            popularityEmoji.text = EMOJI_ANGRY;
        else
            popularityEmoji.text = EMOJI_RAGING;
    }

    // Formata os valores de receita para mostrar M ou K
    private string FormatRevenue(float value)
    {
        if (value >= 1000000)
            return (value / 1000000).ToString("F1") + "M";
        else if (value >= 1000)
            return (value / 1000).ToString("F1") + "K";
        else
            return value.ToString("F1");
    }

    // Formata os valores da popula√ß√£o
    private string FormatPopulation(float value)
    {
        if (value >= 1000000)
            return (value / 1000000).ToString("F1") + "M";
        else if (value >= 1000)
            return (value / 1000).ToString("F1") + "K";
        else
            return value.ToString("F0");
    }

    // Alterna a visibilidade do painel de miss√£o
    public void ToggleMissionPanel()
    {
        missionPanel.SetActive(!missionPanel.activeSelf);
    }

    // Chamada ao plantar uma √°rvore na miss√£o
    public void PlantTree()
    {
        treesPlanted++;
        missionText.text = $"\uD83C\uDF33 Plante {missionGoal} √°rvores\nProgresso: {treesPlanted}/{missionGoal}";

        AddPopularity(2);          // Popularidade aumenta ao plantar √°rvores
        ReducePollution(2);        // Polui√ß√£o reduz ao plantar √°rvores

        if (treesPlanted >= missionGoal)
        {
            missionText.text += "\n‚úÖ Miss√£o completa!";
            AddPopularity(5);      // B√¥nus de popularidade por concluir a miss√£o
        }
    }

    // Aumenta a polui√ß√£o
    public void AddPollution(float amount)
    {
        pollution += amount;
        pollution = Mathf.Clamp(pollution, 0f, 100f);
    }

    // Reduz a polui√ß√£o
    public void ReducePollution(float amount)
    {
        pollution -= amount;
        pollution = Mathf.Clamp(pollution, 0f, 100f);
    }

    // Aumenta a receita
    public void AddRevenue(float amount)
    {
        revenue += amount;
    }

    // Aumenta a popularidade de forma segura
    public void AddPopularity(float amount)
    {
        popularity = Mathf.Clamp(popularity + amount, 0f, 100f);
    }

    // Aumenta a popula√ß√£o
    public void AddPopulation(float amount)
    {
        population += amount;
    }
}

